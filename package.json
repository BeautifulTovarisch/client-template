{
    "name": "webpack-scaffolding",
    "version": "0.0.0",
    "description": "Standalone front-end client intended to be used as a starting template",
    "main": "main.js",
    "scripts": {
	"test": "ava --color",
	"build": "webpack --env.production --config webpack.production.config.js --progress",
	"server": "webpack-dev-server --hot --colors --config webpack.dev.config.js --watch-poll",
	"start": "run-p server test"
    },
    "ava": {
	"babel": {},
	"watch": true,
	"files": [
	    "client/**/*.spec.js",
	    "!node_modules/"
	],
	"sources": [
	    "client/**/*.{js,jsx}",
	    "!*.bundle.js"
	],
	"require": [
	    "babel-register"
	]
    },
    "repository": {},
    "author": "",
    "dependencies": {
	"react": "^16.4.1",
	"react-dom": "^16.4.1",
	"react-router": "^3.0.2",
	"react-router-dom": "^4.1.1"
    },
    "devDependencies": {
	"ava": "^0.25.0",
	"babel-core": "^6.23.1",
	"babel-loader": "^6.3.2",
	"babel-polyfill": "^6.23.0",
	"babel-preset-env": "^1.6.1",
	"babel-preset-react": "^6.23.0",
	"babel-register": "^6.26.0",
	"css-loader": "^0.26.1",
	"file-loader": "^0.10.0",
	"imports-loader": "^0.7.0",
	"npm-run-all": "^4.0.2",
	"react-css-modules": "^4.1.0",
	"react-test-renderer": "^16.4.1",
	"style-loader": "^0.13.1",
	"uglify-js": "^2.8.22",
	"uglifyjs-webpack-plugin": "^0.4.3",
	"url-loader": "^0.5.7",
	"webpack": "^2.2.1",
	"webpack-dev-server": "^2.4.1",
	"webpack-merge": "^4.1.0"
    }
}
